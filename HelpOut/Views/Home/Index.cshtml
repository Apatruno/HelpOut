<div >
    @if (Request.IsAuthenticated)
    {
        if (User.IsInRole("Organization"))
        {
            <h2>Events Created:</h2>



            if (Model.EventsCreated.Count > 0)
            {
                <ul>
                    @foreach (Event e in Model.EventsCreated)
                    {
                        <li>@Html.ActionLink(e.Name, "Details", new { controller = "Event", id = e.EventID }) </li>
                    }
                </ul>
            }
        }

        else if (User.IsInRole("Volunteer"))
        {
            <h2>Events Attending:</h2>

            if (Model.EventsAttending.Count > 0)
            {
                <ul>
                    @foreach (Event e in Model.EventsAttending)
                    {
                        <li>@Html.ActionLink(e.Name, "Details", new { controller = "Event", id = e.EventID }) </li>
                    }
                </ul>
            }
        }
    }
</div>
